
ErrorDocument 500 /controllers/errors/index.php?action=index
ErrorDocument 404 /controllers/errors/index.php?action=notfound

Options -MultiViews
DirectorySlash Off

RewriteEngine On

#css rewrite rule
RewriteRule ^stylesheets/(.*)\.css$ /stylesheets/scss.php/$1.scss [R=301,L]

RewriteCond %{HTTP_HOST} !^m\.
RewriteRule ^$ controllers/test/index.php [L]

#base redirect rule
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteRule index.php controllers/test/index.php [L]

#controller redirect to internal file rule
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteRule ^(.*)/(.+)$ controllers/$1/$2.php [L]

# controller redirect rule
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*[^\/])$ controllers/$1/index.php [L]


<Files *.*>
    Order Deny,Allow
    Deny from all
</Files>

<Files ~ "\.(php|js|sql|css|svg|eot|ttf|woff|woff2)$">
    Order Allow,Deny
    Allow from all
</Files>